#!/bin/bash
export SH_UNIT_DIR="$PWD"

set_up() {
    return 0
}

was_run() {
    local test_name="$1"
    eval "${test_name}_WAS_RUN=true"
}

tear_down() {
    return 0
}

set_up_test() {
    local test_name="$1"
    eval "${test_name}_WAS_RUN=false"
    set_up
    eval "${test_name}_WAS_SET_UP=true"
}

tear_down_test() {
    local test_name="$1"
    tear_down
    eval "${test_name}_WAS_TEAR_DOWN=true"
}

log_status() {
    local test_name="$1"
    local status="$2"
    if [[ "$status" == "0" ]]; then
        echo "OK: $test_name"
    else
        echo "FAILED: $test_name"
    fi
}

run() {
    local test_name="$1"
    set_up_test "$test_name"
    "$test_name"
    local status="$?"
    was_run "$test_name"
    log_status "$test_name" "$status"
    tear_down_test "${test_name}"
    return "$status"
}

execute_suite() {
    local suite_filename="$1"
    local test_list
    local test_name
    IFS=$'\n' read -r -d '' -a  test_list <<<"$(grep -Po "test_\w+(?=\(\))" "$suite_filename")"
    #shellcheck source=/dev/null
    source "$suite_filename"
    for test_name in "${test_list[@]}"; do
        run "$test_name" || return 1
    done
}

execute_tests() {
    local test_filename="$1"
    local sh_unit_filename="$2"
    #shellcheck source=/dev/null
    source "$sh_unit_filename"
    execute_suite "$test_filename"
}

